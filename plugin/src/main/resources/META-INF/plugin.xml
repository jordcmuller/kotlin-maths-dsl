<idea-plugin>
  <id>com.example.kotlin.mathdsl</id>
  <name>Kotlin Math DSL</name>
  <vendor email="you@example.com" url="https://github.com/you">You</vendor>

  <description>
    Provides analysis and quick-fixes for a Kotlin-based mathematical DSL (Double).
  </description>

  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="org.jetbrains.kotlin">
    <supportsKotlinPluginMode supportsK2="true" />
  </extensions>

  <!-- Register inspections and intention actions -->
  <extensions defaultExtensionNs="com.intellij">
    <localInspection
            language="kotlin"
            shortName="DslSimplifyInspection"
            displayName="Math DSL Simplifications"
            groupName="Math DSL"
            enabledByDefault="true"
            implementationClass="maths.plugin.DslSimplifyInspection"/>
    <localInspection
            language="kotlin"
            shortName="DslValidationInspection"
            displayName="Math DSL Validation"
            groupName="Math DSL"
            enabledByDefault="true"
            implementationClass="maths.plugin.DslValidationInspection"/>
  </extensions>
</idea-plugin>
